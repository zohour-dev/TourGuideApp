<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/AppBarStyle</item>
    </style>

    <!-- App bar style -->
    <style name="AppBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Remove the shadow below the app bar -->
        <item name="elevation">0dp</item>
    </style>

    <!-- List-Item Styles -->
    <style name="ListItemTextViewStyle">
        <item name="android:layout_width">@dimen/list_item_text_view_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/list_item_text_view_margin_start</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Detail Activity Styles -->
    <style name="DetailActivityNameAndDescriptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/text_margin_left</item>
        <item name="android:layout_marginTop">@dimen/text_margin_top</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DetailActivityConstraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/constraint_layout_margin_left</item>
        <item name="android:layout_marginTop">@dimen/constraint_layout_margin_top</item>
    </style>

    <style name="DetailActivityIconImageViewStyle">
        <item name="android:layout_width">@dimen/detail_activity_icon_width</item>
        <item name="android:layout_height">@dimen/detail_activity_icon_height</item>
    </style>

    <style name="DetailActivityLocationAndPhoneTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/detail_activity_beside_icon_text_view_margin_left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
